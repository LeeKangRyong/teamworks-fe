{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/entities/*": [
        "./src/entities/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/widgets/*": [
        "./src/widgets/*"
      ],
      // "@/pages/*": [
      //   "src/pages_re/*"
      // ],
      "@/app/*": [
        "./src/app/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
